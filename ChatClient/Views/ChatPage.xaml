<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ChatClient.Views.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:local="using:ChatClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uicontorls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel x:Name="messagesPanel" Margin="15,0">
            </StackPanel>
        </ScrollViewer>

        <TextBox Grid.Row="1"
                 Margin="0,15,0,15"
                 VerticalAlignment="Bottom">
            <TextBox.Template>
                <ControlTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                VerticalAlignment="Center"
                                BorderThickness="0"
                                Background="{x:Null}">
                            <FontIcon Glyph="&#xE723;" />
                        </Button>
                        <TextBox Grid.Column="1" />
                        <Button Grid.Column="2"
                                VerticalAlignment="Center"
                                BorderThickness="0"
                                Background="{x:Null}">
                            <FontIcon Glyph="&#xE724;" />
                        </Button>
                    </Grid>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
    </Grid>
</Page>
